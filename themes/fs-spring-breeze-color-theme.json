{
	"name": "flysand's spring breeze",
	"colors": {
		"editor.background": "#020D13",
		"editor.foreground": "#f0fcfc",
		"activityBarBadge.background": "#007acc",
		"sideBarTitle.foreground": "#bbbbbb",
	},
	"tokenColors": [
		// +--------------------------------------------------------------------------------------+
		// |  Basic Syntax (Highlights for all programming languages)                             +
		// +--------------------------------------------------------------------------------------+
		{
			"name": "Comments and string literals",
			"scope": [
				"comment",
				"string",
				// Do not highlight escapes inside strings.
				"constant.character.escape",
			],
			"settings": {
				"foreground": "#6c8293"
			}
		},
		{
			"name": "Keyword, Storage",
			"scope": [
				"keyword.other",
				"keyword.control",
                "keyword.operator.word",
				"storage.type",
				"storage.modifier",
				"entity.name.tag",
			],
			"settings": {
				"foreground": "#98e8bb"
			}
		},
		{
			"name": "Number, Constant, Function Argument, Tag Attribute, Embedded",
			"scope": [
				"constant.numeric",
				"constant.language",
				"constant.character",
				"constant.escape",
			],
			"settings": {
				"foreground": "#0eeebe"
			}
		},
		{
			"name": "Types / Classes / Namespaces",
			"scope": [
				"support.type",
				"entity.name.type",
				"entity.name.class",
				"entity.name.namespace",
			],
			"settings": {
				"foreground": "#A491D3",
			}
		},
		{
			"name": "Generic types / Type parameters",
			"scope": [
				"entity.name.type"
			],
			"settings": {
				"foreground": "#8b61a8",
			},
		},
		{
			"name": "Attributes",
			"scope": "meta.attribute",
			"settings": {
				"foreground": "#54B6A0",
			},
		},
		{
			"name": "Functions and function calls",
			"scope": "entity.name.function",
			"settings": {
				"foreground": "#8fe1ec",
			},
		},
		
		// +--------------------------------------------------------------------------------------+
		// |  Rust-specific highlights                                                            +
		// +--------------------------------------------------------------------------------------+
		{
			"name": "[Rust]: Lifetimes",
			"scope": [
				"storage.modifier.lifetime.rust",
				"entity.name.type.lifetime.rust",
				"punctuation.definition.lifetime.rust",
			],
			"settings": {
				"foreground": "#e3d53f"
			}
		},
		{
			"name": "[Rust] Macros",
			"scope": "entity.name.function.macro.rust",
			"settings": {
				"foreground": "#94e33f"
			}
		},

		// +--------------------------------------------------------------------------------------+
		// |  Javascript/Typescript-specific highlights                                           +
		// +--------------------------------------------------------------------------------------+
		{
			"name": "[JS] Regexp escapes",
			"scope": [
				"constant.character.numeric.regexp",
				"keyword.control.anchor.regexp",
				"string.regexp.js",
			],
			"settings": {
				"foreground": "#6c8293",
			},
		},

		// +--------------------------------------------------------------------------------------+
		// |  Markdown-specific highlights                                                        +
		// +--------------------------------------------------------------------------------------+
		{
			"name": "[Markdown] Heading",
			"scope": [
				"markup.heading",
			],
			"settings": {
				"foreground": "#98e8bb"
			},
		},
		{
			"name": "[Markdown] Italics",
			"scope": [
				"markup.italic",
			],
			"settings": {
				"foreground": "#A491D3",
				"fontStyle": "italic",
			},
		},
		{
			"name": "[Markdown] Bold",
			"scope": [
				"markup.bold",
			],
			"settings": {
				"foreground": "#A491D3",
				"fontStyle": "bold",
			},
		},
		{
			"name": "[Markdown] Code",
			"scope": [
				"markup.inline",
			],
			"settings": {
				"foreground": "#A491D3",
			},
		},
		{
			"name": "[Markdown] Link",
			"scope": [
				"string.other.link.description.markdown",
				"string.other.link.title.markdown",
			],
			"settings": {
				"foreground": "#A491D3",
			},
		},

	],
	"semanticHighlighting": true,
	"semanticTokenColors": {
        "keyword": {
			"foreground": "#98e8bb",
			"bold": true,
		},
		"boolean": "#0eeebe",
		// Type-like
		"type": "#A491D3",
		"typeAlias": "#A491D3",
		"class": "#A491D3",
		"struct": "#A491D3",
		"union": "#A491D3",
		"enum": "#A491D3",

		"typeParameter": {
			"foreground": "#cc61df",
			"bold": true,
		},
		"enumMember": "#7689e0",
		"interface": "#9b76e0",
		// Function-like
		"function": "#8fe1ec",
		"method": "#8fe1ec",
		// Macro
		"macro": "#a1e15c",
		// Reset to default text color
		"variable": "#f0fcfc",
		"parameter": "#f0fcfc",
		"property": "#f0fcfc",
	}
}
